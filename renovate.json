{
  "$schema": "https://github.com/SchemaStore/schemastore/raw/master/src/schemas/json/renovate.json",
  "extends": [
    "config:js-app",
    "group:allNonMajor",
    "group:linters",
    "group:test",
    ":separateMultipleMajorReleases",
    ":automergeMinor",
    ":automergeBranch",
    ":automergeRequireAllStatusChecks",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":pinSkipCi",
    ":enableVulnerabilityAlertsWithLabel(security)"
  ],
  "automergeType": "pr",
  "masterIssue": true,
  "labels": [
    "dependencies",
    "renovate"
  ],
  "packageRules": [
    {
      "packagePatterns": ["eslint"],
      "labels": ["linting"]
    },
    {
      "matchPackagePatterns": ["next", "react"],
      "labels": ["core-deps"],
      "major": {
        "masterIssueApproval": true
      }
    },
    {
      "depTypeList": ["optionalDependencies"],
      "addLabels": ["optional"]
    },
    {
      "matchPackageNames": ["eslint-plugin-json-schema-validator"],
      "prPriority": -2
    }
  ]
}
