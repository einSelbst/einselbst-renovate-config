{
  "$schema": "https://github.com/SchemaStore/schemastore/raw/master/src/schemas/json/renovate.json",
  "extends": [
    "config:js-app",
    "group:allNonMajor",
    "packages:linters",
    "packages:test",
    "packages:googleapis",
    ":separateMultipleMajorReleases",
    ":automergeMinor",
    ":automergeBranch",
    ":automergeRequireAllStatusChecks",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":pinSkipCi",
    ":enableVulnerabilityAlertsWithLabel(security)"
  ],
  "schedule": [
    "on tuesday and thursday",
    "every weekend"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "packageRules": [
    {
      "packagePatterns": ["eslint"],
      "labels": ["linting"]
    },
    {
      "matchPackagePatterns": ["next", "react"],
      "labels": ["core-deps"]
    },
    {
      "depTypeList": ["optionalDependencies"],
      "addLabels": ["optional"]
    }
  ]
}
